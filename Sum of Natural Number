import java.util.Scanner;

public class SumofNaturalNum {
    
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        int num = sc.nextInt();
        if(num<=0){
            System.out.println("Invalid");
            
        }else{
        int sum = (num*(num+1))/2;
        System.out.println(sum);
        }
    }
}
